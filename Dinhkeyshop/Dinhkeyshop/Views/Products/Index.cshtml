@model IEnumerable<Dinhkeyshop.Models.Products>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Danh sách sản phẩm</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <div class="container">
        <h1>Danh sách sản phẩm</h1>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="product-card">
                        <img src="@product.ImageUrl" alt="@product.ProductName" />
                        <h2>@product.ProductName</h2>
                        <p>@product.Description</p>
                        <p>Giá: @String.Format("{0:C}", product.Price)</p>
                        <p>Còn lại: @product.QuantityInStock</p>
                        <a href="@Url.Action("Details", "Products", new { id = product.ProductID })" class="btn btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
