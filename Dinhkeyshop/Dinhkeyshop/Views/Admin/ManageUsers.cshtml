@model IEnumerable<Dinhkeyshop.Models.Users>

@{
    ViewBag.Title = "Manage Users";
}

<h2>Manage Users</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a href="@Url.Action("EditUser", new { id = user.UserID })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("DeleteUser", new { id = user.UserID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreateUser")" class="btn btn-success">Create New User</a>
<a href="@Url.Action("Dashboard", "Admin")" class="btn btn-success">Quay lại trang Admin</a>