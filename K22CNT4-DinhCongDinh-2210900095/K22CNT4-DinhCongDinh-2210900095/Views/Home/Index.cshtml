@model IEnumerable<K22CNT4_DinhCongDinh_2210900095.Models.Products>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Sản phẩm</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <style>
        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col-md-3 {
            width: 22%;
            margin: 1%;
        }

        .product-card {
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 15px;
        }

            .product-card img {
                max-width: 100%;
                height: auto;
                margin-bottom: 15px;
            }

            .product-card h3 {
                font-size: 1.25em;
                margin-bottom: 10px;
            }

            .product-card p {
                font-size: 1.2em;
                color: #343a40;
                margin-bottom: 15px;
            }

            .product-card .btn {
                background-color: #007bff;
                color: #ffffff;
                padding: 10px 20px;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .product-card .btn:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="logo-container">
                <img src="~/Content/images/LOGO DKEY.png" alt="Định Key Shop Logo" class="logo-image">
                <h1>Định Key Shop</h1>
            </div>
            <nav>
                <ul>
                    <li>THÔNG TIN THANH TOÁN</li>
                    <li>HƯỚNG DẪN</li>
                    <li>BLOG</li>
                </ul>
            </nav>
            <div class="user-info">
                @* Nút giỏ hàng *@
                <a href="@Url.Action("Index", "ShoppingCart")" class="btn btn-success">
                    <i class="fa-solid fa-cart-shopping"></i> Giỏ Hàng
                </a>
            </div>
        </header>
        <h2>Sản phẩm mới</h2>
        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <div class="col-md-3">
                        <div class="product-card">
                            <img src="@product.MainImageUrl" alt="@product.ProductName" class="product-image" />
                            <h3>@product.ProductName</h3>
                            <p>@String.Format("{0:N0}đ", product.Price)</p>
                            <a href="@Url.Action("Details", "Products", new { id = product.ProductID })" class="btn btn-primary">Xem chi tiết</a>

                        </div>
                    </div>
                }
            }
            else
            {
                <p>Không có sản phẩm nào để hiển thị.</p>
            }
        </div>
    </div>
</body>
</html>
