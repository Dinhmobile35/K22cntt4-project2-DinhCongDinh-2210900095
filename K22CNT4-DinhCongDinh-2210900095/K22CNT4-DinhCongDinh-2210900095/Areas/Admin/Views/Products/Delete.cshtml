@model K22CNT4_DinhCongDinh_2210900095.Models.Products

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Xóa sản phẩm</title>
    <style>
        /* CSS tích hợp */
        body {
            font-family: Arial, sans-serif;
            background-color: #181818;
            color: #ddd;
            margin: 0;
            padding: 20px;
        }

        h2, h3, h4 {
            text-align: center;
            color: white;
        }

        h3 {
            margin-bottom: 20px;
            color: #ff6b6b;
        }

        .dl-horizontal {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #222;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        dt {
            font-weight: bold;
            color: #ccc;
            margin-top: 10px;
        }

        dd {
            margin-left: 0;
            color: #ddd;
        }

        .form-actions {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-default {
            background-color: #ff6b6b;
            color: #fff;
            margin-right: 10px;
        }

            .btn-default:hover {
                opacity: 0.9;
            }

        a {
            color: #28a745;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>

    <script>
        function confirmDelete(event) {
            var confirmed = confirm("Bạn có chắc chắn muốn xóa sản phẩm này?");
            if (!confirmed) {
                event.preventDefault(); // Ngăn chặn việc submit nếu người dùng chọn "Cancel"
            }
        }
    </script>
</head>
<body>
    <h2>Xóa sản phẩm</h2>
    <h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
    <div>
        <h4>Thông tin sản phẩm</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Tên sản phẩm</dt>
            <dd>@Html.DisplayFor(model => model.ProductName)</dd>

            <dt>Mô tả</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>

            <dt>Giá</dt>
            <dd>@Html.DisplayFor(model => model.Price)</dd>

            <dt>Số lượng trong kho</dt>
            <dd>@Html.DisplayFor(model => model.QuantityInStock)</dd>

            <dt>URL hình ảnh chính</dt>
            <dd>@Html.DisplayFor(model => model.MainImageUrl)</dd>

            <dt>Ngày tạo</dt>
            <dd>@Html.DisplayFor(model => model.CreatedAt)</dd>

            <dt>Loại sản phẩm</dt>
            <dd>@Html.DisplayFor(model => model.Categories.CategoryName)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" onclick="confirmDelete(event)" /> |
                @Html.ActionLink("Quay lại danh sách", "Index")
            </div>
        }
    </div>
</body>
</html>
